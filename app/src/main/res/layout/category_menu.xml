<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/menu_ayam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_mie">

        <ImageView
            android:id="@+id/img_nasi"
            android:layout_width="76dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ayam" />

        <TextView
            android:id="@+id/nasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="9dp"
            android:text="@string/text_ayam"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_mie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="12dp"
        android:layout_toRightOf="@id/menu_ayam"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu_ayam"
        app:layout_constraintEnd_toStartOf="@+id/menu_minuman">

        <ImageView
            android:id="@+id/img_mie"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/miee" />

        <TextView
            android:id="@+id/mie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="9dp"
            android:text="@string/text_mie"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu_minuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_snack"
        app:layout_constraintStart_toEndOf="@+id/menu_mie">

        <ImageView
            android:id="@+id/img_minuman"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/milk" />

        <TextView
            android:id="@+id/minuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="9dp"
            android:text="@string/text_minuman"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_snack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/menu_mie"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu_minuman"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_snack"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/snacks" />

        <TextView
            android:id="@+id/snack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="9dp"
            android:text="@string/text_snack"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>