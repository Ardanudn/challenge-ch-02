<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/group_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hai_ardanu_"
            android:layout_width="138dp"
            android:layout_height="38dp"

            android:text="Hai, Ardanu"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mau_makan_apa_hari_ini_"
            android:layout_width="178dp"
            android:layout_height="27dp"
            android:layout_marginTop="24dp"
            android:text="mau makan apa hari ini ?"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/vector"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/vector_ek1"
            android:background="@drawable/baseline_shopping_cart_24" />

        <ImageButton
            android:id="@+id/vector_ek1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"

            android:background="@drawable/baseline_account_circle_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bannerdiskon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_discount" />

        <ImageView
            android:id="@+id/diskon_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_diskon" />

        <TextView
            android:id="@+id/diskon_30_"
            android:layout_width="129dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/diskon_img"
            android:text="Diskon 30%"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/diskon_detail"
            android:layout_width="199dp"
            android:layout_height="38dp"
            android:layout_below="@id/diskon_30_"
            android:layout_toRightOf="@+id/diskon_img"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="pesan makanan lewat aplikasi dan dapatkan diskonmu"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerdiskon">


        <LinearLayout
            android:id="@+id/menu_nasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            >
            <ImageView android:id="@+id/img_nasi"
                android:src="@drawable/nasi"
                android:layout_width="60dp"
                android:layout_height="63dp" />

            <TextView
                android:id="@+id/nasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_gravity="center|bottom"
                android:text="Nasi"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_mie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/menu_nasi"
            android:layout_marginHorizontal="46dp"
            >
            <ImageView android:id="@+id/img_mie"
                android:src="@drawable/mie"
                android:layout_width="60dp"
                android:layout_height="63dp" />

            <TextView
                android:id="@+id/mie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_gravity="center|bottom"
                android:text="Mie"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_snack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/menu_mie"
            >
            <ImageView android:id="@+id/img_snack"
                android:src="@drawable/snack"
                android:layout_width="60dp"
                android:layout_height="63dp" />

            <TextView
                android:id="@+id/snack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_gravity="center|bottom"
                android:text="Snack"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_minuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            >
            <ImageView android:id="@+id/img_minuman"
                android:src="@drawable/minuman"
                android:layout_width="60dp"
                android:layout_height="63dp" />

            <TextView
                android:id="@+id/minuman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_gravity="center|bottom"
                android:text="Minuman"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>